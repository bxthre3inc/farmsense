# ==============================================
# FARMSENSE ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it will be ignored automatically

# ==================== SERVER ====================
PORT=8000
NODE_ENV=development

# ==================== DATABASE ====================
DATABASE_URL=postgresql://user:password@localhost:5432/farmsense
DB_HOST=localhost
DB_PORT=5432
DB_NAME=farmsense
DB_USER=farmsense_user
DB_PASSWORD=change_me_in_production

# ==================== JWT & AUTH ====================
JWT_SECRET=your-strong-random-secret-key-min-64-characters-change-in-production
JWT_EXPIRY=7d

# ==================== OPENAI / LLM ====================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo
OPENAI_TIMEOUT=30000

# ==================== EQUIPMENT VENDORS ====================
# Lindsay / Zimmatic FieldNET
FIELDNET_API_KEY=your-fieldnet-api-key
FIELDNET_API_SECRET=your-fieldnet-api-secret
FIELDNET_REFRESH_INTERVAL_MS=43200000

# Valley Connect
VALLEY_API_KEY=your-valley-connect-api-key
VALLEY_API_SECRET=your-valley-connect-api-secret
VALLEY_BASE_URL=https://api.valleyconnect.com

# Reinke RemoteCommand
REINKE_USERNAME=your-reinke-username
REINKE_PASSWORD=your-reinke-password
REINKE_BASE_URL=https://remotecommand.reinkeirrigation.com

# Netafim AgSmart
NETAFIM_API_KEY=your-netafim-agsmart-api-key
NETAFIM_API_SECRET=your-netafim-agsmart-api-secret
NETAFIM_BASE_URL=https://api.agsmart.netafim.com

# Jain Irrigation
JAIN_API_KEY=your-jain-api-key
JAIN_API_SECRET=your-jain-api-secret
JAIN_BASE_URL=https://api.myweather.jain.com

# Generic HTTP/REST Equipment
GENERIC_HTTP_TIMEOUT=10000
GENERIC_HTTP_RETRY_ATTEMPTS=3

# Modbus TCP
MODBUS_TCP_TIMEOUT=5000
MODBUS_TCP_PORT=502

# MQTT
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=optional-mqtt-user
MQTT_PASSWORD=optional-mqtt-password

# ==================== SATELLITE & WEATHER ====================
# Sentinel Hub (satellite imagery)
SENTINEL_HUB_CLIENT_ID=your-sentinel-hub-client-id
SENTINEL_HUB_CLIENT_SECRET=your-sentinel-hub-client-secret

# Weather APIs
WEATHER_API_KEY=your-weather-api-key
WEATHER_API_PROVIDER=openweather  # or weather-gov, weatherapi, etc.

# ==================== SPATIAL DATA ====================
# PostGIS for spatial queries (already in PostgreSQL)
POSTGIS_ENABLED=true

# Map Tiles (Mapbox, OpenStreetMap, etc.)
MAPBOX_TOKEN=optional-mapbox-token
MAP_PROVIDER=openstreetmap  # or mapbox

# ==================== LOGGING & MONITORING ====================
LOG_LEVEL=info  # debug, info, warn, error
LOG_FORMAT=json  # json or text

# Sentry (error tracking)
SENTRY_DSN=optional-sentry-dsn
SENTRY_ENVIRONMENT=development

# ==================== PYTHON ENGINE ====================
PYTHON_ENGINE_PATH=./python-engine/zero_hour_engine.py
PYTHON_SUBPROCESS_TIMEOUT=30000

# ==================== SECURITY ====================
# CORS settings
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# ==================== FEATURE FLAGS ====================
FEATURE_EMERGENCY_STOP=true
FEATURE_DRY_RUN_MODE=true
FEATURE_EQUIPMENT_SCHEDULING=true
FEATURE_PREDICTIVE_ENGINE=true
FEATURE_AUDIT_LOGGING=true

# ==================== AUDIT & COMPLIANCE ====================
AUDIT_LOG_RETENTION_DAYS=365
AUDIT_LOG_IMMUTABLE=true

# ==================== FRONTEND ====================
VITE_API_BASE_URL=http://localhost:8000
VITE_MAP_TILES_URL=https://tile.openstreetmap.org/{z}/{x}/{y}.png
